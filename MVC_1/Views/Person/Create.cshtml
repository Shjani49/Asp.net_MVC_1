
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

@{
    if (ViewBag.Success != null)
    {
        <p class="alert-success">Success! @(ViewBag.Success)</p>
    }
    else if (ViewBag.Exception != null)
    {
        <p class="alert-danger">Errors detected in your form submission, please correct the following and resubmit:</p>
        <ul class="alert-danger">
            @foreach (Exception e in ViewBag.Exception.SubExceptions)
            {
                <li>@(e.Message)</li>
            }
        </ul>

    }
}
<form action="/Person/Create" method="get">
    <div>
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" value="@(ViewBag.FirstName)" />
    </div>
    <div>
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" value="@(ViewBag.LastName)" />
    </div>
    <div>
        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="phone" value="@(ViewBag.Phone)" />
    </div>
    <button type="submit">Go!</button>
</form>